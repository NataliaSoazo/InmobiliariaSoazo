@model InmobiliariaSoazo.Models.Contrato

@{
    ViewData["Title"] = "Detalles";
}


<div>
    <h4>Detalles del contrato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaTerm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaTerm)
        </dd>
      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Locatario)
        </dt>

        <dd class="col-sm-10">
            @(Model.Locatario.Nombre + " " + Model.Locatario.Apellido)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Datos)
        </dt>

        <dd class="col-sm-10">
            @(Model.Datos.Direccion )
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }) |
    <a asp-action="Index">Volver al listado anterior</a>
</div>
